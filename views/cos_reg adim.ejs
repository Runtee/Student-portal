<!DOCTYPE html>
<html lang="en">

<%- include('layouts/head adim'); -%>

<body>

  <%- include('layouts/header adim'); -%>

  <div class="container-fluid">
    <div class="row">
      <%- include('layouts/sidebar adim'); -%>

      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
          <h1 class="h2"> Add course </h1>
        </div>
        <div class="course_form">
          <div class="row">
            <div class="col-md-8 col-lg-6 ">
              <form action="/adim/dashboard/courses/post" method="POST">
                <p>
                  Course code <input type="text"  class="form-control" name="courseCode" required>
                </p>
                <p>
                  Course Title <input type="text" class="form-control" name="courseTitle" required>
                </p>
                <p>Select semester <select id="semester" class="form-select" name="semester" required>
                    <option value=""></option>
                    <option value="first semester">first semester</option>
                    <option value="second semester">second semester</option>
    
                  </select></p>
                <p>
                  Level <input type="text"  class="form-control" name="level" required>
                </p>
                <p>
                  Department <input type="text"  class="form-control" name="department" required>
                </p>
    
    
    
    
    
                <input class="btn btn-primary btn-lg text-center" type="submit" value="Submit">
              </form>
            </div>
          </div>
          <!-- <h3>Input Courses</h3> -->
          
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

</body>


</html>