            <div class="profile">
                <form action="/profilePost" class="" method="POST">
                    <h1 class="heading">personal information</h1>
                        <div class="tale">
                            <div>
                                <div class="img">
                                    <img src="/public/<%= studentInfo[0]?.image %>">

                                </div>
                                <div class="row">

                                    <div class="col-6">
                                        <label for="fname">First Name</label>
                                    </div>
                                    <div class="col-6">
                                        <input type="text" id="fname" name="firstName" readonly
                                            value="<%= studentInfo[0]?.firstName%> ">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <label for="mname">Middle Name</label>
                                    </div>
                                    <div class="col-6">
                                        <input type="text" id="mname" name="middleName" readonly
                                            value="<%= studentInfo[0]?.middleName %>">
                                    </div><br>
                                    </p>
                                </div>
                                <div class="row">
                                    <p>
                                    <div class="col-6">
                                        <label for="text">Surname</label>
                                    </div>
                                    <div class="col-6">
                                        <input type="text" id="sname" name="surName" readonly
                                            value="<%=studentInfo[0]?.surName %>">
                                    </div>
                                    </p>
                                </div>
                                <div class="row">
                                    <p>
                                    <div class="col-6">
                                        <label for="email">Email</label>
                                    </div>
                                    <div class="col-6">
                                        <input type="email" name="email" id="email" value="<%=studentInfo[0]?.email %>"
                                            readonly> <br>
                                    </div>
                                    </p>
                                </div>
                                <div class="row">
                                    <p>
                                    <div class="col-6">
                                        <label for="date">Date of Birth</label>
                                    </div>
                                    <div class="col-6">
                                        <input type="text" name="DOB" id="DOB" value="<%=studentInfo[0]?.DOB %>"
                                            readonly>
                                    </div>
                                    </p>
                                </div>
                                <div class="row">
                                    <p>
                                    <div class="col-6">
                                        <label for="tel">Phone number</label>
                                    </div>
                                    <div class="col-6">
                                        <input type="tel" id="phone number" name="phone"
                                            value="<%=studentInfo[0]?.phone %>" readonly>
                                    </div>
                                    </p>
                                </div>
                                <div class="row">
                                    <p>
                                    <div class="col-6">
                                        <label for="origin">State of Origin</label>
                                    </div>
                                    <div class="col-6">
                                        <select name="state" id="state" name='state' aria-readonly="true">
                                            <option value="<%=studentInfo[0]?.state %>">
                                                <%=studentInfo[0]?.state %>
                                            </option>

                                        </select>
                                    </div>
                                    </p>
                                </div>
                                <div class="row">
                                    <p>
                                    <div class="col-6">
                                        <label for="Local">Local Government of Origin</label>
                                    </div>
                                    <div class="col-6">
                                        <input type="text" id="local" name="LGA" value="<%=studentInfo[0]?.LGA %>"
                                            readonly>
                                    </div>
                                    </p>
                                </div>
                                <div class="row">
                                    <p>
                                    <div class="col-6">
                                        <label for="caddress">Contact Address</label>
                                    </div>
                                    <div class="col-6">
                                        <input type="text" id="caddress" name="caddress">
                                    </div>
                                    </p>
                                </div>
                                <div class="row">
                                    <p>
                                    <div class="col-6">
                                        <label for="paddress">Permanent Address</label>
                                    </div>
                                    <div class="col-6">
                                        <input type="text" id="paddress" name="paddress">
                                    </div>
                                    </p>
                                </div>
                                <div class="row">
                                    <p>
                                    <div class="col-6">
                                        <label for="religion">Religion</label>
                                    </div>
                                    <div class="col-6"><select name="religion" id="religion">
                                            <option value="Christianity">Christianity</option>
                                            <option value="Muslim">Muslim</option>
                                            <option value="others">others</option>
                                        </select>
                                    </div>
                                    </p>
                                </div>
                                <div class="row">
                                    <p>
                                    <div class="col-6">
                                        <label for="bgroup">Blood Group</label>
                                    </div>
                                    <div class="col-6">
                                        <input type="text" name="bgroup" id="bgroup">
                                    </div>
                                    </p>
                                </div>
                                <div class="row">
                                    <p>
                                    <div class="col-6">
                                        <label for="gtype">Genotype</label>
                                    </div>
                                    <div class="col-6">
                                        <select name="gtype" id="gtype">
                                            <option value="AA">AA</option>
                                            <option value="AS">AS</option>
                                            <option value="SS">SS</option>
                                        </select>
                                    </div>
                                    </p>
                                </div>
                                <div class="row">
                                    <p>
                                    <div class="col-6">
                                        <label for="sex">Sex</label>
                                    </div>
                                    <div class="col-6">
                                        <select name="sex" id="sex" aria-readonly="true">
                                            <option>
                                                <%=studentInfo[0]?.sex %>
                                            </option>
                                        </select>
                                    </div>
                                    </p>
                                </div>
                            </div>


                        </div>
                        <div class="line"></div>
                        <div>

                            <h1 class="">Sponsor and next of kin Details</h1>

                            <div class="tale">

                                <div class="row">
                                    <div class="col-md-3 col-6">
                                        <label for="sfullname">Sponsor's Full name</label>
                                    </div>
                                    <div class="col-md-3 col-6"><input type="text" name="parent" id="sfullname"
                                            value="<%=studentInfo[0]?.parent %>">
                                    </div>
                                    <div class="col-md-3 col-6">
                                        <label for="saddress">Sponsor's Address</label>
                                    </div>
                                    <div class="col-md-3 col-6">
                                        <input type="text" name="saddress" id="saddress">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3 col-6"><label for="smobile">Sponsor's Mobile No</label></div>
                                    <div class="col-md-3 col-6"><input type="text" name="smobile" id="smoblile"
                                            value="<%=studentInfo[0]?.phone %>">
                                    </div>
                                    <div class="col-md-3 col-6">
                                        <label for="nfullname">Next of kin Full name</label>
                                    </div>
                                    <div class="col-md-3 col-6">
                                        <input type="text" name="nfullname" id="nfullname">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3 col-6">
                                        <label for="naddress">Next of kin Address</label>
                                    </div>
                                    <div class="col-md-3 col-6">
                                        <input type="text" name="naddress" id="naddress">
                                    </div>
                                    <div class="col-md-3 col-6">
                                        <label for="smobile">Next of kin Mobile No</label>
                                    </div>
                                    <div class="col-md-3 col-6">
                                        <input type="text" name="nmobile" id="smoblile">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3 col-6">
                                        <label for="Email">Next of kin Email</label>
                                    </div>
                                    <div class="col-md-3 col-6"><input type="email" name="nemail" id="email">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="line"></div>
                        <div>

                            <h1 class="sub-heading">Programme Details</h1>

                            <div class="tale">

                                <div class="row">
                                    <div class="col-md-3 col-6"><label for="faculty">Faculty</label></div>
                                    <div class="col-md-3 col-6">
                                        <input type="text" name="faculty" value="<%=studentInfo[0]?.faculty %>" readonly>
                                    </div>

                                    <div class="col-md-3 col-6">
                                        <label for="dept">Department</label>
                                    </div>
                                    <div class="col-md-3 col-6">
                                        <input type="text" name="department" value="<%=studentInfo[0]?.department %>"
                                            readonly>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3 col-6">
                                        <label for="stype">Student type</label>
                                    </div>
                                    <div class="col-md-3 col-6">
                                        <select name="stype" id="stype">
                                            <option>Undergraduate</option>
                                            <option>Postgraduate</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3 col-6">
                                        <label for="mode">Mode of Entry</label>
                                    </div>
                                    <div class="col-md-3 col-6"><select name="mode" id="mode">
                                            <option>JAMB</option>
                                            <option>Direct Entry</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3 col-6"><label for="ms">Mode of study</label></div>
                                    <div class="col-md-3 col-6"><select name="ms" id="ms">
                                            <option>Full Time</option>
                                            <option>Part Time</option>
                                        </select></div>
                                    <div class="col-md-3 col-6"><label for="ey">Entry Year</label></div>
                                    <div class="col-md-3 col-6"><input type="date" name="ey" id="ey"></div>

                                </div>
                                <div class="row">
                                    <div class="col-md-3 col-6"><label for="yg">Year of Graduation</label></div>
                                    <div class="col-md-3 col-6"><input type="date" name="yg" id="yg"></div>
                                    <div class="col-md-3 col-6"><label for="ys">Year of Study</label></div>
                                    <div class="col-md-3 col-6"><select name="ys" id="ys">
                                            <option value="100">100 level</option>
                                            <option value="100">200 level</option>
                                            <option value="100">300 level</option>
                                            <option value="100">400 level</option>
                                            <option value="100">500 level</option>
                                            <option value="100">600 level</option>
                                        </select></div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3 col-6"><label for="reg">Registration Number</label></div>
                                    <div class="col-md-3 col-6"><input type="text" name="regNo" id="reg"
                                            value="<%=studentInfo[0]?.regNo %>" readonly></div>
                                </div>
                            </div>
                        </div>
                        <div class="line"></div>
                        <div>

                            <h1 class="medical">Medical History</h1>

                            Diabetes<input type="checkbox" name='sick' value="diabetes" id="diabetes">
                            Sickle cell<input type="checkbox" name='sick' value="sickle" id="sickle">
                            Asthma<input type="checkbox" name='sick' value="asthma" id="asthma">
                            Hypertension<input type="checkbox" name='sick' value="hypertension" id="hypertension">
                            Disabilities<input type="checkbox" name='sick' value="disabilities" id="disabilities">
                            Allergies<input type="checkbox" name='sick' value="allergies" id="allergies">
                            Blind<input type="checkbox" name='sick' value="blind" id="blind">

                            <h4>I certify that the information given in this form is, to the best of my knowldege and
                                belief,
                                correct and
                                complete <input type="checkbox" required> </h4>
                        </div>
                        <div class="update">
                            <input class="btn" type="submit" value="Update">

                        </div>
                </form>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

