          <div class="bod">
    <header>
        <h1>STUDENT'S RESULT</h1>
    </header>
    <table classinventory class="meta" style="height: auto; border: none;">
        <tr>
            <th>
            <span class='contenteditable'>NAME <strong>:</strong></span>
            </th>
            <td>
                <span contenteditable class='contenteditable'> <%=studentInfo[0].surName %>
                    <%=studentInfo[0].firstName %>
                        <%=studentInfo[0].middleName %></span>
            </td>
        </tr>
        <tr>
            <th>
                <span class='contenteditable'>REG NUMBER <strong>:</strong></span>
            </th>
                <td>
                    <span class='contenteditable'> <%=studentInfo[0].userid.username %>
                    </span>
                </td>
        </tr>
        <tr>
            <th>
                <span class='contenteditable'>DEPARTMENT <strong>:</strong></span>
            </th>
                <td>
                    <span id="prefix" class='contenteditable'><%=studentInfo[0].department %></span>
                </td>
        </tr> 
        <tr>
            <th>
                <span class='contenteditable'>LEVEL <strong>:</strong></span>
            </th>
                <td>
                    <span id="prefix" class='contenteditable'><%=result[0].level %></span>
                </td>
        </tr>
        <tr>
            <th>
                <span class='contenteditable'>SESSION <strong>:</strong></span>
            </th>
                <td>
                    <span id="prefix" class='contenteditable'><%=result[0].session %></span>
                </td>
        </tr>
        <tr>
            <th>
                <span class='contenteditable'>SEMESTER <strong>:</strong></span>
            </th>
                <td>
                    <span id="prefix" class='contenteditable'> <%=result[0].semester %></span>
                </td>
        </tr>
        
    </table>
    
            <br><br><br><br><br>
            <table class="res" style="height: auto; border: none;">
                <thead class="thead">
                    <tr>
                        <th>
                            <span contenteditable="">COURSE CODE</span>
                        </th>
                        <th>
                            <span contenteditable="">COURSE TITLE</span>
                        </th>
                        <th>
                            <span contenteditable="">GRADE</span>
                        </th>
                     </tr>
                </thead>
                <tbody class="data">
                    <% if(result != null && result.length > 0){ %>
                        <% for (var i=0; i < result[0].courseCode.length; i++) { %>
                        <tr>
                            <td>
                                
                                <span contenteditable=""><%=result[0].courseCode[i]%></span>
                            </td>  
                            <td>    
                                <span contenteditable=""><%=cosName[i]%></span>
                            </td> 
                            <td>    
                                <span contenteditable=""><%=result[0].grade[i]%></span>
                            </td>
                        </tr>
                        <% } %>

                        <% } %>
                        
                 </tbody>
            </table>
</div>           
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

