                    <th>
                    <span class='contenteditable'>NAME <strong>:</strong></span>
                    </th>
                    <td>
                        <span contenteditable class='contenteditable'> <%=studentInfo[0].surName %>
                            <%=studentInfo[0].firstName %>
                                <%=studentInfo[0].middleName %></span>
                    </td>
                </tr>
                <tr>
                    <th>
                        <span class='contenteditable'>REG NUMBER <strong>:</strong></span>
                    </th>
                        <td>
                            <span class='contenteditable'> <%=studentInfo[0].userid.username %>
